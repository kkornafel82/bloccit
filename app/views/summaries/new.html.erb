
<h1>New Summary</h1>
 
 <div class="row">
   <div class="col-md-4">
     <p>Enter a new summary for a post</p>
   </div>
   <div class="col-md-8">
     <%= form_for @summary do |f| %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter summary name (or name of Post)" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Summary" %>
       </div>
       
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>